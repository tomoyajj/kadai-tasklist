<div class="row">

<%= form_for(task) do |f| %>
<% if task.errors.any? %>
     <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-lg-offset-3 col-lg-6">

    <div class="form-group">
  <%= f.label :content, '課題' %>
  <%= f.text_field :content ,class: 'form-control'%>
  </div>
  <div class="form-group">
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status ,class: 'form-control'%>
    </div>
</div>


    
  <%= f.submit '投稿' %>
<% end %>
</div>