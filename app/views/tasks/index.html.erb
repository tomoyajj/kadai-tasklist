<h1>課題一覧</h1>

<% if @tasks.any? %>
<table class="table table-striped">
   <thead>
      <tr>
        <th>id</th>
        <th>課題</th>
        <th>status</th>
      </tr>
    </thead>

<tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新しい課題の投稿', new_task_path, class: "btn btn-primary" %>
